<%= button_to "Discover Top Rated Movies", user_movies_path(@user), method: :get, params: { top_rated: true } %><br>

<%= form_with url: user_movie_path(@user),  method: :post, data: {turbo: false}, local: true do |f| %>
  <%= f.label :movie_title %>
	<%= f.text_field :movie_title %><br>
  <%= f.submit "Search by Movie Title" %>
<% end %><br>

List of Movies<br>
<% @movies.each do |movie| %>
  - <%= movie.title %><br>
<% end %>